{
  "name": "watarukura/slimphp-unicage",
  "description": "",
  "keywords": [
  ],
  "homepage": "http://github.com/watarukura/slimphp-unicage",
  "license": "MIT",
  "authors": [
    {
      "name": "Wataru Kurashima",
      "email": "what.r.j50@gmail.com",
      "homepage": "https://watarukura.github.io/"
    }
  ],
  "require": {
    "php": ">=7.2.0",
    "slim/slim": "^3.1",
    "slim/php-view": "^2.0",
    "monolog/monolog": "^1.17"
  },
  "require-dev": {
    "phpunit/phpunit": ">=4.8 < 6.0",
    "squizlabs/php_codesniffer": "^3.3",
    "phpmd/phpmd": "^2.6",
    "dopesong/slim-whoops": "^2.3",
    "kitchenu/slim-debugbar": "^1.1"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\": "app/",
      "Tests\\": "tests/"
    }
  },
  "config": {
    "process-timeout": 0
  },
  "scripts": {
    "start": "php -S localhost:8080 -t public",
    "test": "phpunit -v",
    "md": "phpmd src/ text cleancode,codesize,controversial,design,naming,unusedcode",
    "cs": "phpcs -n src/ --standard=PSR2"
  }
}
